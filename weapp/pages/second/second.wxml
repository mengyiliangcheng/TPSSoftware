<!--pages/tb/tb.wxml-->
<view >
<view wx:for="{{Goodsinfo}}" bindtap="goodsview" 
id="{{index}}"   
class="userinfo-avatar2">
<view wx:for="{{item}}" >  
 <image wx:if="{{index == 0}}" class="userinfo-avatar" src="{{item}}"  background-size="cover"></image>
<text class="userstyle-motto" wx:if="{{index == 1}}">{{item}} </text>
</view>
</view>
  </view>   
<view class="userinfo-avatar3">
<button open-type="contact"class="buttoncolor">客服咨询</button>
     <button bindtap="callphone"class="buttoncolor">电话咨询</button>
</view>
<view class="userinfo-avatar3" >
      <button bindtap="addnewgoods"class="buttoncolor1">点击添加新商品</button>
  </view> 
<view class="userinfo-avatar3" >
      <button bindtap="deletegoods"class="buttoncolor1">点击删除商品</button>
  </view>      
  







